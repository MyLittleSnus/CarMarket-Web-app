@page
@model Razor_Test.Pages.ProfilePageModel
@{
    ViewData["Title"] = "Profile";
    ViewData["Username"] = Model.CurrentProfile.Username;
}

<div class="row">
    <div class="col-12 text-center mt-5">
        <h1>Профіль</h1>
    </div>
    <form method="post" id="profileForm" enctype="multipart/form-data">
        <div class="col-4">
            <div class="col-12">
                <div class="container">
                    <img class="img-fluid border border-dark w-50 text-center" src="@Model.CurrentProfile.ImagePath" alt="..." />

                    @*/Users/mihailtkacenko/Desktop/Coding/C#/Razor_Projects/Razor_Test/wwwroot/ProfileResources*@
                </div>
            </div>
            <div class="col-12">
                <div class="container">
                    <div class="mb-3 mt-3">
                        <h4>Аватар</h4>
                        <input class="form-control" type="file" asp-for="@Model.FormFile" id="formFile">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="container">
                <label class="form-label">Ім'я користувача</label>
                <input class="form-control mb-2" type="text" value="@Model.CurrentProfile.Username" asp-for="@Model.ChangedUsername" />
                <label class="form-label" for="emailId">Пошта</label>
                <input class="form-control" id="emailId" readonly type="email" asp-for="@Model.CurrentProfile.Email" />
                <label class="form-label mt-2" for="dateTimeId">Аккаунт створений</label>
                <input class="form-input" id="dateTimeId" type="datetime-local" readonly asp-for="@Model.CurrentProfile.CreatedAt" />
                @*<label class="form-label">Пароль</label>
                <input class="form-control mb-2" type="text" value="@Model.CurrentProfile.Password" asp-for="@Model.ChangedPassword" />*@
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-12 mt-5 text-center">
        <div class="d-flex align-items-end">
            <div class="col-12 mb-3">
                <button class="btn btn-primary w-50" type="submit" form="profileForm">Застосувати</button>
            </div>
        </div>
    </div>
    @if (Model.CurrentProfile.IsAdmin)
    {
        <div class="col-12 text-center">
            <div class="d-flex align-items-end">
                <div class="col-12 mb-3">
                    <a class="btn btn-dark w-50" asp-page="AdminPage">Адміністрація</a>
                </div>
            </div>
        </div>
    }
    <div class="col-12 text-center mb-3">
        <form method="post">
            <button type="submit" form="profileForm" class="btn btn-info w-50" asp-page="ProfilePage" asp-page-handler="LogOut">
                Вийти
            </button>
        </form>
    </div>
</div>