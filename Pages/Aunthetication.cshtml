@page
@model Razor_Test.Pages.AuntheticationModel
@{
    ViewData["Title"] = "Aunthetication";
}

<div class="row align-items-center justify-content-center">
    <div class="col-md-4 lg-6 sm-12">
        <div class="container">
            <img class="img-fluid" style="max-width: 500px" src="~/Images/logos/mainLogo.png" alt="..." />
        </div>
    </div>
    <div class="col-md-8 lg-6 sm-12">
        <h1 class="d-none d-lg-block" style="color: red">
            Razor
        </h1>
        <h2 class="d-none d-lg-block" style="color: lightblue">
            Carmarket
        </h2>
    </div>
    <div class="col-12">
        <div class="container">
            <div class="text-center">
                <h4>
                    Аутентифікація
                </h4>
            </div>
            <form class="mt-3 mb-3" method="post">
                <input type="email" class="form-control mb-2" id="emailAuthentication" asp-for="@Model.Email" placeholder="email@example.com">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <input type="password" class="form-control" id="passwordAuthentication" asp-for="@Model.Password" placeholder="password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <button class="btn btn-outline-primary mt-2 mb-2" type="submit">Увійти</button>
            </form>
            <a class="link-secondary" asp-page="Authorization">
                <p>
                    <em>Ще не зареєструвалися? Зробіть це зараз!</em>
                </p>
            </a>
        </div>
    </div>
</div>

