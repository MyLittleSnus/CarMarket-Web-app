<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Razor_Test</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Razor_Test.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-black bg-dark border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/Images/logos/mainLogo.png"
                         width="60"
                         height="50" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Додому</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="CarList" asp-page-handler="MostPopularOffers">Найгарячіше</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="CarList" asp-page-handler="MostRecentModels">Новітні моделі</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav d-flex flex-row-reverse justify-content-end">
                        <li class="nav-item d-flex">
                            @{
                                if (ViewData["Username"] == "Account" || ViewData["Username"] == null)
                                    ViewData["RedirPage"] = "Aunthetication";
                                else
                                    ViewData["RedirPage"] = "ProfilePage";
                            }
                            <a class="btn btn-warning-outline border border-light text-light" asp-page="@ViewData["RedirPage"]">
                                <i class="bi bi-person-circle"></i>
                                @ViewData["Username"]
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="border-top bg-dark footer text-light text-muted mt-2">
        <div class="d-flex">
            <div class="container justify-content-start">
                &copy; 2022 - Razor Carmarket - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
            <div class="container justify-content-end">
                <div class="row justify-content-end">
                    <div class="col-xxl-2 col-1">
                        <div class="d-flex flex-row justify-content-start">
                            <a class="link-secondary"href="instagram.com"> <i class="bi bi-instagram"></i></a>
                            <div class="d-none d-xxl-block mx-2">
                                <a href="#" class="link-secondary">Instagram</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-2 col-1">
                        <div class="d-flex flex-row justify-content-start">
                            <a class="link-secondary" href="facebook.com"><i class="bi bi-facebook"></i></a>
                            <div class="d-none d-xxl-block mx-2">
                                <a class="link-secondary" href="facebook.com">Facebook</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xxl-2 col-1">
                        <div class="d-flex flex-row justify-content-start">
                            <a class="link-secondary" href="telegram.com"><i class="bi bi-telegram"></i></a>
                            <div class="d-none d-xxl-block mx-2">
                                <a class="link-secondary" href="telegram.com">Telegram</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>